{
  "formName": "Contractor Loans",
  "description": "",
  "emailTemplateId": "eeitt_submission_confirmation",
  "authConfig": {
    "authModule": "hmrc"
  },
  "dmsSubmission": {
    "businessArea": "For example: FinanceOpsCorpT",
    "classificationType": "For example: BT-NRU-Environmental",
    "customerId": "${fieldIdOfCustomerIdentifier}",
    "dmsFormId": "CHANGEME"
  },
  "sections": [
    {
      "title": "About you",
      "shortName": "About you",
      "fields": [
        {
          "id": "title",
          "type": "text",
          "label": "Enter your title",
          "shortName": "title",
          "mandatory": "true",
          "errorMessage": "enter your title, for example, Dr, Mr, Mrs etc."
        },
        {
          "id": "firstName",
          "type": "text",
          "label": "First name",
          "shortName": "First name",
          "mandatory": "true",
          "errorMessage": "enter your first name"
        },
        {
          "id": "middleName",
          "type": "text",
          "label": "Middle name",
          "shortName": "Middle name",
          "mandatory": "false",
          "errorMessage": "enter your middle name or names"
        },
        {
          "id": "lastName",
          "type": "text",
          "label": "Last name",
          "shortName": "Last name",
          "mandatory": "true",
          "errorMessage": "enter your last name"
        }
      ]
    },
    {
      "title": "Your Unique taxpayer referenece",
      "shortName": "Unique taxpayer reference",
      "fields": [
        {
          "id": "uTR",
          "type": "text",
          "label": "Your Unique Taxpayer Reference (UTR)",
          "shortName": "UTR",
          "format": "number(10,0)",
          "mandatory": "true",
          "errorMessage": "enter your UTR, this must be 10 numbers"
        }
      ]
    },
    {
      "title": "Your national insurance number",
      "shortName": "National insurance number",
      "fields": [
        {
          "id": "nINO",
          "type": "text",
          "label": "Your National Insurance Number",
          "shortName": "National insurance number",
          "format": "text",
          "mandatory": "true",
          "errorMessage": "enter your national insurance number, this must be in the format: two letters, six numbers, one letter"
        }
      ]
    },
    {
      "title": "Caseflow reference numbers",
      "shortName": "Caseflow reference numbers",
      "fields": [
        {
          "id": "caseflowGroupInfo",
          "type": "info",
          "label": "",
          "infoText": "Enter your caseflow references here\n\n caseflow references are prefixed with CFS, CFSS or CFSC",
          "infotype": "noformat"
        },
        {
          "id": "caseflowGroup",
          "type": "group",
          "label": "Caseflow reference number",
          "helpText": "",
          "repeatsMax": 15,
          "repeatLabel": "Add a caseflow reference $n",
          "presentationHint": "summariseGroupAsGrid",
          "fields": [
            {
              "id": "caseFlowRef",
              "type": "text",
              "label": "Your Caseflow reference",
              "shortName": "Caseflow reference",
              "format": "text",
              "mandatory": "true",
              "errorMessage": "enter your caseflow reference number, this must be in the format: two letters, six numbers, one letter"
            }
          ]
        }
      ]
    },
    {
      "title": "Do you have a United Kingdom or international address?",
      "fields": [
        {
          "id": "addChoice",
          "type": "choice",
          "label": "Do you have a United Kingdom or international address?",
          "choices": [
            "United Kingdom",
            "International"
          ]
        }
      ]
    },
    {
      "title": "Your UK address",
      "shortName": "UK address",
      "includeIf": "${addChoice = 0}",
      "fields": [
        {
          "id": "ukAddress",
          "type": "address",
          "label": "Enter your UK address details",
          "shortName": "UK address",
          "international": "false",
          "postcodeLookup": "no"
        },
        {
          "id": "contactNumberUK",
          "type": "text",
          "label": "Your telephone number",
          "helpText": "input your telephone number here",
          "format": "telephoneNumber",
          "mandatory": "true",
          "errorMessage": "Enter a valid telephone number"
        }
      ]
    },
    {
      "title": "Communicating with HMRC using email",
      "shortName": "Email communications",
      "fields": [
        {
          "id": "emailInfo1",
          "type": "info",
          "label": "",
          "infoText": "We need your consent before using email to communicate",
          "infoType": "noformat"
        },
        {
          "id": "emailInfo2",
          "type": "info",
          "label": "Read the HMRC privacy policy",
          "infoText": "Read the [HMRC Privacy policy](https://www.gov.uk/government/publications/data-protection-act-dpa-information-hm-revenue-and-customs-hold-about-you/data-protection-act-dpa-information-hm-revenue-and-customs-hold-about-you) here \n\n You will need to press back in your browser to get back to this form",
          "infoType": "long",
          "mandatory": "false"
        },
        {
          "id": "emailInfo3",
          "type": "info",
          "label": "",
          "infoText": "By supplying your email address you consent to the use of email communication",
          "infoType": "noformat"
        },
        {
          "id": "email",
          "type": "text",
          "label": "Email address",
          "format": "email",
          "mandatory": "true",
          "errorMessage": "Enter a valid email address with no spaces, like name@example.com"
        }
      ]
    },
    {
      "title": "About your agent(s)",
      "shortName": "About agents",
      "fields": [
        {
          "id": "agentChoice",
          "type": "choice",
          "label": "Do you have an agent who represents you for tax purposes?",
          "mandatory": "true",
          "choices": [
            "Yes I have one or more agent(s) representing me",
            "No I do not have an agent"
          ]
        }
      ]
    },
    {
      "title": "Mutiple Agents",
      "includeIf": "${agentChoice =0}",
      "fields": [
        {
          "id": "howMany",
          "type": "text",
          "label": "how many agents do you have representing you for tax purposes?",
          "format": "number(2,0)",
          "displayWidth": "xs"
        }
      ]
    },
    {
      "title": "Your agents details $n",
      "shortName": "Agent details",
      "includeIf": "${agentChoice = 0}",
      "repeatsMin": "${howMany}",
      "repeatsMax": "${howMany}",
      "fields": [
        {
          "id": "agentTitle",
          "type": "text",
          "label": "Title",
          "shortName": "title"
        },
        {
          "id": "agentFirstName",
          "type": "text",
          "label": "First name",
          "shortName": "First name",
          "mandatory": "true"
        },
        {
          "id": "agentLastName",
          "type": "text",
          "label": "Last name",
          "shortName": "Last name"
        },
        {
          "id": "organisationName",
          "type": "text",
          "label": "Agent organisation name",
          "shortName": "Organisation name",
          "errorMessage": "enter the name of the organisation your agent works for"
        },
        {
          "id": "agentCode",
          "type": "text",
          "label": "Enter your agents code",
          "helpText": "For example: for self assessment the agent code is SA followed by 8 numerical digits"
        },
        {
          "id": "agentUkAddress",
          "type": "address",
          "label": "Enter your agents UK address details",
          "shortName": "Agents UK address",
          "international": "true",
          "postcodeLookup": "no"
        },
        {
          "id": "agentSchemeRep",
          "type": "text",
          "label": "Tell us the scheme name(s) where this agent handles your tax affairs",
          "multiline": "true"
        }
      ]
    },
    {
      "title": "How many loan schemes have you participated in? ",
      "fields": [
        {
          "id": "howManySchemes",
          "type": "text",
          "label": "How many loan schemes have you participated in? ",
          "format": "number(6,0)"
        }
      ]
    },
    {
      "title": "Scheme details",
      "shortName": "Scheme details",
      "repeatsMin": "${howManySchemes}",
      "repeatsMax": "${howManySchemes}",
      "fields": [
        {
          "id": "schemeGroup",
          "type": "group",
          "label": "Scheme details",
          "helpText": "",
          "repeatsMax": 20,
          "repeatLabel": "Scheme tax year $n",
          "fields": [
            {
              "id": "schemeName",
              "type": "text",
              "label": "Scheme name",
              "shortName": "Scheme name",
              "errorMessage": "enter your scheme name"
            },
            {
              "id": "schemeDate",
              "type": "date",
              "label": "tell us the tax year where you recieved the loan",
              "shortName": "Tax year of loan",
              "format": "after 1999/04/05, before 2019/04/05",
              "mandatory": "true",
              "errorMessage": "Tax year must be input in the format 05/04/YYYY. The tax year cannot be before 05/04/2000 or after 05/04/2019",
              "helptext": "The tax year must be input as ending 05/04/YYYY"
            },
            {
              "id": "totalLoanAmount",
              "type": "text",
              "label": "Total loan amount for the year",
              "format": "sterling",
              "mandatory": "true",
              "shortname": "Loan amount"
            },
            {
              "id": "engagementType",
              "type": "choice",
              "label": "Engagement Type",
              "format": "vertical",
              "mandatory": "true",
              "choices": [
                "Employed",
                "Self-employed",
                "Partnership"
              ]
            },
            {
              "id": "schemeInfo1",
              "type": "info",
              "label": "",
              "infoText": "If you intend to have this loan written off, there may be a charge to inheritance tax",
              "infoType": "noformat"
            },
            {
              "id": "writeOffChoice",
              "type": "choice",
              "label": "Do you intend to have this loan written off?",
              "format": "yesno",
              "mandatory": "true"
            }
          ]
        }
      ]
    },
    {
      "title": "Other schemes",
      "fields": [
        {
          "id": "moreSchemesQuestion",
          "type": "choice",
          "label": "Are you or have you been involved in other disguised remuneration schemes that you haven't told us about on this form?",
          "choices": [
            "Yes",
            "No"
          ]
        }
      ]
    },
    {
      "title": "Number of other schemes",
      "includeIf": "${moreSchemesQuestion = 0}",
      "fields": [
        {
          "id": "howManyOthers",
          "type": "text",
          "label": "How many other disguised remuneration schemes have you been involved in that yoy haven't told us about on this form? ",
          "format": "number(99,0)"
        }
      ]
    },
    {
      "title": "Other scheme $n",
      "includeIf": "${moreSchemesQuestion = 0}",
      "repeatsMin": "${howManyOthers}",
      "repeatsMax": "${howManyOthers}",
      "fields": [
        {
          "id": "otherSchemeName",
          "type": "text",
          "label": "Scheme name"
        },
        {
          "id": "otherSchemeRef",
          "type": "text",
          "label": "Scheme Reference number"
        }
      ]
    },
    {
      "title": "I have now stopped using tax avoidance schemes",
      "fields": [
        {
          "id": "stoppedChoice",
          "type": "choice",
          "label": "I have now stopped using tax avoidance schemes",
          "helpText": "If you agree, select yes",
          "choices": [
            "Yes",
            "No"
          ]
        }
      ]
    },
    {
      "title": "Your residency",
      "fields": [
        {
          "id": "domChoice",
          "type": "choice",
          "label": "What is your country of domicile?",
          "choices": [
            "UK",
            "Other"
          ]
        }
      ]
    },
    {
      "title": "Non-UK domicile",
      "includeIf": "${domChoice = 1}",
      "fields": [
        {
          "id": "otherDom",
          "type": "text",
          "label": "Enter your country of domicile here"
        },
        {
          "id": "priorUKDate",
          "type": "date",
          "label": "The date you resided in the UK prior to receiving the loan(s)"
        },
        {
          "id": "leftUKDate",
          "type": "date",
          "label": "The date you left the UK after receiving the loan(s)"
        }
      ]
    },
    {
      "title": "Non-UK domicile",
      "includeIf": "${domChoice = 1}",
      "fields": [
        {
          "id": "generatedId_ad18e3f3-f391-4e44-af87-4a374f838a84",
          "type": "info",
          "label": "anyOtherDates",
          "infoText": "Apart from the dates you have provided previously, enter details of any other periods you resided in the UK",
          "infoType": "noformat"
        },
        {
          "id": "generatedId_63b8ee97-21bb-4d72-89c2-bd8ad0951874",
          "type": "group",
          "label": "",
          "repeatsMax": 20,
          "repeatAddAnotherText": "Add another visit to the UK",
          "fields": [
            {
              "id": "arrivalDate",
              "type": "date",
              "label": "Arrival date"
            },
            {
              "id": "depatureDate",
              "type": "date",
              "label": "Departure date"
            },
            {
              "id": "reason",
              "type": "text",
              "label": "Reason for visit"
            }
          ]
        }
      ]
    }
  ],
  "declarationSection": {
