{
  "_id": "transitional-simplified-procedures",
  "formName": "Transitional Simplified Procedures",
  "description": "",
  "emailTemplateId": "tsp_application_confirmation",
  "authConfig": {
    "authModule": "hmrc"
  },
  "dmsSubmission": {
    "businessArea": "BTCTO",
    "classificationType": "BT-CTO-TSP",
    "customerId": "${eoriNo}",
    "dmsFormId": "TSP"
  },
  "sections": [
    {
      "title": "Are you eligible for Transitional Simplified Procedures?",
      "shortName": "Eligibility questions",
      "fields": [
        {
          "id": "choiceDAN",
          "type": "choice",
          "label": "Do you expect to move goods that attract duty?",
          "format": "yesno"
        },
        {
          "id": "accessToDAN",
          "type": "choice",
          "label": " Do you hold or have access to use a Duty Deferment Account (DAN)?",
          "shortName": "DAN number",
          "format": "yesno"
        },
        {
          "id": "choiceEORI",
          "type": "choice",
          "label": "Do you have an EORI number that is subscribed to Customs Declaration Service (CDS)?",
          "shortName": "EORI number subscribed to CDS",
          "format": "yesno"
        },
        {
          "id": "choiceCHIEF",
          "type": "choice",
          "label": "Have you obtained software/a CHIEF badge to allow you to submit declarations in CDS/CHIEF?",
          "shortName": "CHIEF badge",
          "helpText": "EPU code? Customs Declaration Service ",
          "format": "yesno"
        }
      ]
    },
    {
      "title": "Eligibility Checker Failed",
      "includeIf": "${(choiceDAN = 0 && accessToDAN= 1) || choiceCHIEF=1 || choiceEORI = 1}",
      "continueIf": "false",
      "fields": [
        {
          "id": "generatedId_aa8b55ce-5197-4d3e-a9fc-2c30f6a5aa9f",
          "type": "info",
          "label": "",
          "infoText": "You are unable to continue until you have an EORI which is subscribed to CDS, DAN or CHIEF",
          "infoType": "noformat"
        }
      ]
    },
    {
      "title": "What is your Duty Deferment Account (DAN) reference?",
      "shortName": "Duty Deferment Account",
      "includeIf": "${choiceDAN = 0 && accessToDAN=0}",
      "fields": [
        {
          "id": "danNo",
          "type": "text",
          "label": "What is your Duty Deferment Account (DAN) reference?",
          "shortName": "DAN reference"
        }
      ]
    },
    {
      "title": "Business details",
      "fields": [
        {
          "id": "eoriNo",
          "type": "text",
          "label": "EORI reference",
          "helpText": "This includes the country code followed by up to 15 numerical digits, for example GB123456789123",
          "format": "text(14,17)"
        },
        {
          "id": "busName",
          "type": "text",
          "label": "Business or trading name"
        },
        {
          "id": "utrNo",
          "type": "text",
          "label": "Unique taxpayer reference (if you have one)",
          "shortName": "Unique taxpayer reference",
          "helpText": "Enter a valid 10 digit Unique Taxpayer Reference",
          "format": "utr",
          "mandatory": "false"
        },
        {
          "id": "vatNo",
          "type": "text",
          "label": "VAT registration number (if you have one)",
          "shortName": "VAT registration number",
          "helpText": "This is 9 numbers, sometimes with 'GB' at the start, for example 123456789 or GB123456789. You can find it on your VAT registration certificate",
          "format": "ukVrn",
          "mandatory": "false"
        }
      ]
    },
    {
      "title": "Applicants details",
      "fields": [
        {
          "id": "appName",
          "type": "text",
          "label": "Full name"
        },
        {
          "type": "text",
          "id": "companyRole",
          "label": "Role in company"
        },
        {
          "id": "appPhone",
          "type": "text",
          "label": "Telephone number",
          "format": "telephoneNumber"
        },
        {
          "id": "appEmail",
          "type": "text",
          "label": "Email address",
          "format": "email"
        },
        {
          "id": "contactPref",
          "type": "choice",
          "label": "Select how you would like to be contacted",
          "shortName": "Contact preference",
          "multivalue": "true",
          "choices": [
            "Email",
            "Phone"
          ]
        }
      ]
    },
    {
      "title": "Address",
      "fields": [
        {
          "id": "yourAddress",
          "type": "address",
          "label": "Your address"
        },
        {
          "id": "regAdd",
          "type": "choice",
          "label": "Is the registered office address the same as your address?",
          "shortName": "Registered address",
          "format": "yesno"
        }
      ]
    },
    {
      "title": "Registered office address",
      "includeIf": "${regAdd = 1}",
      "fields": [
        {
          "id": "appAdd",
          "type": "address",
          "label": "Registered office address",
          "shortName": "Address"
        }
      ]
    }
  ],
  "declarationSection": {
    "title": "Declaration",
    "shortName": "Declaration",
    "fields": [
      {
        "id": "decText",
        "type": "info",
        "label": "",
        "infoText": "By signing below I confirm that the information given in this form is true, complete and accurate and that I will notify HMRC when I import goods to the UK, including all appropriate customs declarations.\nI confirm that I will pay the customs duties for which I may be liable on those imports",
        "infoType": "noformat"
      },
      {
        "id": "declarationNameGroup",
        "type": "group",
        "label": "Provide details below of who is signing the declaration",
        "fields": [
          {
            "id": "declaration-firstname",
            "type": "text",
            "label": "First name",
            "errorMessage": "First name can only include letters a to z, numbers, spaces, hyphens and apostrophes"
          },
          {
            "id": "declaration-lastname",
            "type": "text",
            "label": "Last name",
            "errorMessage": "Last name can only include letters a to z, numbers, spaces, hyphens and apostrophes"
          },
          {
            "id": "declaration-status",
            "type": "text",
            "label": "Status",
            "helpText": "For example, director, financial controller or secretary",
            "errorMessage": "Position in the company can only include letters, numbers, spaces, hyphens and apostrophes"
          }
        ]
      },
      {
        "id": "declarationEmailGroup",
        "type": "group",
        "label": "To receive confirmation that your return has been submitted, enter an email address below",
        "fields": [
          {
            "id": "email",
            "type": "text",
            "label": "Email address",
            "format": "email",
            "mandatory": "true"
          }
        ]
      }
    ]
  },
  "acknowledgementSection": {
    "title": "Confirmation page",
    "shortName": "Acknowledgement Page",
    "fields": [
      {
        "id": "helpText8",
        "type": "info",
        "label": "",
        "infoText": "This is your last opportunity to print or save a pdf copy of your submitted form."
      }
    ]
  },
  "GFC579Ready": "true",
  "submitErrorUrl": "deprecated",
  "submitSuccessUrl": "deprecated"
}